{
  "version": 2,
  "builds": [
    {
      "src": "attendance_system/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "attendance_system/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "attendance_system.settings",
    "PYTHON_VERSION": "3.11"
  }
}
